<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qgexam.exam.enter.dao.OptionInfoDao">

    <select id="selectOptionInfoListByQuestionInfoId" resultType="com.qgexam.exam.enter.pojo.VO.OptionInfoVO">
        select oi.option_name value, oi.option_desc label
        from option_info oi
        where oi.question_id = #{questionInfoId} and oi.is_deleted = 0
    </select>
</mapper>