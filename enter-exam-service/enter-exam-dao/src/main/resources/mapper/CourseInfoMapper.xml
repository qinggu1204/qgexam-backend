<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qgexam.exam.enter.dao.CourseInfoDao">

    <select id="selectCourseInfoListByStudentId" resultType="com.qgexam.exam.enter.pojo.PO.CourseInfo">
        select distinct ci.*
        from course_info ci
        left join student_course cs on ci.course_id = cs.course_id
        <where>
            <if test="studentId != null and studentId != ''">
                and cs.student_id = #{studentId}
            </if>
            and ci.is_deleted = 0
        </where>
    </select>

    <select id="selectStudentIdListByCourseIds" resultType="java.lang.Integer">
        select student_id
        from student_course
        where course_id in
        <foreach collection="courseIdList" item="courseId" open="(" separator="," close=")">
            #{courseId}
        </foreach>
        and is_deleted = 0
    </select>
</mapper>