<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qgexam.exam.enter.dao.StudentExamActionDao">
    <insert id="insertStudentExamAction" useGeneratedKeys="true" keyColumn="id" keyProperty="id">
        insert into student_exam_action (student_id, examination_id)
        values (#{studentId}, #{examinationId})
    </insert>
    <update id="updateScreenCuttingCount">
        update student_exam_action
        set screen_cutting_number = screen_cutting_number + 1
        where id = #{id} and is_deleted = 0;
    </update>

    <select id="selectByStudentIdAndExaminationId"
            resultType="com.qgexam.exam.enter.pojo.PO.StudentExamAction">
        select * from student_exam_action
        where student_id = #{studentId} and examination_id = #{examinationId} and is_deleted = 0
    </select>
</mapper>