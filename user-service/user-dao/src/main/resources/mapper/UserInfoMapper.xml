<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qgexam.user.dao.UserInfoDao">
    <insert id="insertTeacher" parameterType="com.qgexam.user.pojo.PO.TeacherInfo">
        insert into teacher_info (user_id,teacher_number,qualification_img,user_name,school_id,school_name)
        values (#{userId},#{teacherNumber},#{qualificationImg},#{userName},#{schoolId},#{schoolName});
    </insert>
    <insert id="insertStudent" parameterType="com.qgexam.user.pojo.PO.StudentInfo">
        insert into student_info (user_id,user_name,student_number,school_id,school_name)
        values (#{userId},#{userName},#{studentNumber},#{schoolId},#{schoolName});
    </insert>
    <update id="updatePassword" parameterMap="updatePasswordParameter">
        update user_info set password=#{password} where login_name=#{loginName};
    </update>

    <select id="selectRoleListById" resultType="java.lang.String">
        select uri.role_name
            from user_role_info uri
        where uri.user_id = #{id}
    </select>
    <resultMap id="userInfoMap" type="com.qgexam.user.pojo.PO.UserInfo">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="head_img" property="headImg"/>
        <collection property="roleList" column="user_id" select="com.qgexam.user.dao.UserInfoDao.selectRoleListById"/>
    </resultMap>
    <select id="getUserInfoById" resultMap="userInfoMap">
        select user_id, login_name, password, user_name, head_img, create_time, update_time, is_deleted
            from user_info
        where user_id = #{id}
    </select>
    <select id="getUserInfoByLoginName" resultType="com.qgexam.user.pojo.PO.UserInfo">
        select * from user_info where login_name = #{loginName}
    </select>
    <parameterMap id="updatePasswordParameter" type="com.qgexam.user.pojo.PO.UserInfo">
        <parameter property="loginName"/>
        <parameter property="password"/>
    </parameterMap>
</mapper>