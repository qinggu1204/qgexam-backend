<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.qgexam.user.dao.UserInfoDao">

    <select id="selectRoleListById" resultType="java.lang.String">
        select uri.role_name
            from user_role_info uri
        where uri.user_id = #{id}
    </select>
    <resultMap id="userInfoMap" type="com.qgexam.user.pojo.PO.UserInfo">
        <id column="user_id" property="userId"/>
        <result column="user_name" property="userName"/>
        <result column="head_img" property="headImg"/>
        <collection property="roleList" column="user_id" select="com.qgexam.user.dao.UserInfoDao.selectRoleListById"/>
    </resultMap>
    <select id="getUserInfoById" resultMap="userInfoMap">
        select user_id,user_name,head_img
            from user_info
        where user_id = #{id}
    </select>
</mapper>